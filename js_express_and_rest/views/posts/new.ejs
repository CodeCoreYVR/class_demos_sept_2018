<%- include("../partials/header") %>

<h1>New Post</h1>

<form action="/posts" method="POST">
  <div class="form-group">
    <input
      type="text"
      class="form-control"
      name="title"
      placeholder="About what?">
  </div>

  <div class="form-group">
    <input
      type="text"
      class="form-control"
      name="imageUrl"
      placeholder="e.g. http://imgur.com/myPic.jpg">
  </div>

  <div class="form-group">
    <textarea
      class="form-control"
      name="content"
      cols="60"
      rows="5"
      placeholder="What are your thoughts?"></textarea>
  </div>

  <input type="submit" value="Submit" class="btn btn-outline-primary">
</form>

<%- include("../partials/footer") %>