<%- include("../partials/header") %>

<div class="post-cards">
  <% for (let post of posts) { %> 
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title">
          <%= post.title %>
        </h5>

        <p class="card-text">
          <%= post.content %> <br>
          <a href="/posts/<%= post.id %>">View More...</a>
        </p>
      </div>
    </div>
  <% } %>
</div>

<%- include("../partials/footer") %>
